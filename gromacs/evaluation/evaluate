#!/bin/bash

# evaluate, for evaluating conformations using GROMACS.
# Tested using GROMACS 4.5.4.

# Directory of this script.
DIR=`dirname $0`/

# Input files.
INPUT_RUNFILE=${DIR}evaluation.tpr
INPUT_CONFORMATION=$1

# Output files.
OUTPUT_ENERGY=output.edr

# Temporary files.
TEMP_LOG=temp.log

# Avoid GROMACS backup files.
export GMX_MAXBACKUP=-1

# Execute run file.
mdrun -s $INPUT_RUNFILE -e $OUTPUT_ENERGY -g $TEMP_LOG -rerun $INPUT_CONFORMATION > /dev/null
